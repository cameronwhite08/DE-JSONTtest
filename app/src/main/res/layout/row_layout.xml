<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_height"
        android:layout_margin="@dimen/row_margin_size" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/row_margin_size">

        <TextView
            android:id="@+id/descTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/row_margin_size"
            android:layout_marginLeft="@dimen/row_margin_size"
            android:text="@string/empty_row_description"
            android:textSize="@dimen/description_text_size" />

        <TextView
            android:id="@+id/authorTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/descTextView"
            android:layout_marginBottom="@dimen/row_margin_size"
            android:layout_marginTop="@dimen/row_margin_size"
            android:layout_marginRight="@dimen/row_margin_size"
            android:layout_marginLeft="@dimen/row_margin_size"
            android:text="Author: "
            android:textSize="@dimen/author_text_size" />

    </RelativeLayout>

</LinearLayout>